<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/mainFrame"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/backImg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:scaleX="3"
        android:scaleY="3"
        android:src="@drawable/login_bg"/>

    <LinearLayout
        android:id="@+id/mainLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        >

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:background="#C378C8BE"
            android:gravity="center">

            <EditText
                android:id="@+id/email2"
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/dp_20"
                android:hint="用户名"
                android:padding="@dimen/dp_20"
                android:visibility="gone"/>


            <EditText
                android:id="@+id/pass2"
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email2"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/dp_20"
                android:hint="密码"
                android:inputType="textPassword"
                android:padding="@dimen/dp_20"
                android:visibility="gone"/>


            <EditText
                android:id="@+id/pass3"
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pass2"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/dp_20"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:padding="@dimen/dp_20"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pass3"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:rotation="90"
                android:text="注 册"
                android:textColor="#000000"
                android:textSize="14sp"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.25"
            android:background="#C37A80C1"
            android:gravity="center">


            <EditText
                android:id="@+id/email"
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/dp_20"
                android:hint="帐号"
                android:inputType="textCapSentences|textEmailAddress"
                android:padding="@dimen/dp_20"/>


            <EditText
                android:id="@+id/pass"
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:hint="密码"
                android:inputType="textPassword"
                android:padding="@dimen/dp_20"/>


            <TextView
                android:id="@+id/forget"
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pass"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/dp_20"
                android:inputType="textCapSentences"
                android:padding="20dp"
                android:text="忘记密码?"/>


            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forget"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:scaleX="2"
                android:scaleY="2"
                android:text="登 录"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"/>


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginStart="@dimen/dp_30"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_30">

        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@drawable/bottom_1"
            android:background="@drawable/cricle_bg"
            android:layout_marginRight="@dimen/dp_10"/>


        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@drawable/bottom_2"
            android:background="@drawable/cricle_bg"
            android:layout_marginRight="@dimen/dp_10"/>
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@drawable/bottom_3"
            android:background="@drawable/cricle_bg"
            android:layout_marginRight="@dimen/dp_10"/>

        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/cricle_bg"
            android:src="@drawable/bottom_4"/>


    </LinearLayout>


</FrameLayout>