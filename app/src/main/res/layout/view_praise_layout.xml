<?xml version="1.0" encoding="utf-8"?>

<aqtc.gl.school.widget.PraiseLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/praiseLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_praise" />

    <aqtc.gl.school.widget.flowlayout.wrapper.TagFlowLayout
        android:id="@+id/praiseFlowLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:Gravity="left" />

</aqtc.gl.school.widget.PraiseLayout>