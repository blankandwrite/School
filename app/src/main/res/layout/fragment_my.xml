<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_196"
        android:src="@drawable/bg"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_user"
        android:layout_marginTop="-40dp"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小明"
        android:paddingTop="@dimen/dp_6"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_20"
        android:drawableRight="@mipmap/ic_edit"
        android:drawablePadding="@dimen/dp_8"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_academy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/gray1"
                android:text="学院:计算机与信息学院"
                android:drawableLeft="@mipmap/ic_xueyuan"
                android:drawableRight="@mipmap/icon_back_right"
                android:drawablePadding="@dimen/dp_6"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"/>

            <TextView
                android:id="@+id/tv_jibie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/gray1"
                android:text="级别:2011级"
                android:drawableRight="@mipmap/icon_back_right"
                android:drawableLeft="@mipmap/ic_jiebie"
                android:drawablePadding="@dimen/dp_6"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"/>
            <TextView
                android:id="@+id/tv_zhuanye"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/gray1"
                android:text="专业:计算机科学与技术"
                android:drawableRight="@mipmap/icon_back_right"
                android:drawableLeft="@mipmap/ic_zhuanye"
                android:drawablePadding="@dimen/dp_6"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"/>
            <TextView
                android:id="@+id/tv_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/gray1"
                android:text="班级:工科一班"
                android:drawableRight="@mipmap/icon_back_right"
                android:drawableLeft="@mipmap/ic_class"
                android:drawablePadding="@dimen/dp_6"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>