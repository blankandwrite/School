<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="main_bottom_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/tab_bottom_bg</item>
        <item name="android:drawablePadding">@dimen/dp_2</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:minEms">2</item>
        <item name="android:padding">@dimen/dp_4</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="home_list">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawablePadding">@dimen/dp_3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="home_list2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/dp_18</item>
        <item name="android:drawablePadding">@dimen/dp_3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

</resources>
