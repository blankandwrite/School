<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="title">
        <attr name="title_name" format="string"/>
        <attr name="right_title_name" format="string"/>
        <attr name="iv_image_right" format="reference"/>
        <attr name="right_title_show" format="boolean"/>
        <attr name="iv_right_show" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="PraiseListView">
        <attr name="item_color" format="color"/>
        <attr name="item_selector_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ExpandTextView">
        <attr name="showLines" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TagFlowLayout">
        <attr name="auto_select_effect" format="boolean"></attr>
        <attr name="max_select" format="integer"></attr>
        <attr name="Gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <!-- 录制视频控件 -->
    <declare-styleable name="MovieRecorderView">
        <!-- 开始是否打开摄像头 -->
        <attr name="is_open_camera" format="boolean" />
        <!-- 一次拍摄最长时间 -->
        <attr name="record_max_time" format="integer" />
        <!-- 视频分辨率宽度 -->
        <attr name="record_width" format="integer" />
        <!-- 视频分辨率高度 -->
        <attr name="record_height" format="integer" />
    </declare-styleable>

</resources>